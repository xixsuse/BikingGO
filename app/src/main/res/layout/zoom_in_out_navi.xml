<?xml version="1.0" encoding="utf-8"?>

    <!-- Layout for MapActivity -->

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mapView_zoom_layout_navi"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
     >


   	<RelativeLayout
   		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:id="@+id/zoom_layout_navi_portrait"
		android:layout_alignParentBottom="true"
		android:layout_marginBottom="130dp"
		android:gravity="center"
		android:visibility="gone"
		>
    <!-- zoom in button -->
    <ImageButton
        android:id="@+id/zoom_out_portrait"
        android:src="@drawable/zoom_out_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true" 
        android:background="@null"
        android:visibility="gone"
        />
        <!-- android:onClick="onOptionClicked" -->
        
    <!-- zoom out button -->
    <ImageButton
        android:id="@+id/zoom_in_portrait"
        android:src="@drawable/zoom_in_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/zoom_out_portrait"
        android:layout_centerVertical="true"
        android:background="@null"
        android:visibility="gone"
        />
        <!-- android:onClick="onOptionClicked" -->
	</RelativeLayout>
	
	<RelativeLayout   		
		android:layout_width="wrap_content"
		android:layout_height="fill_parent"
		android:id="@+id/zoom_layout_navi_landscape"
		android:layout_alignParentRight="true"
		android:layout_marginRight="30dip"
        android:layout_marginBottom="15dip"
		android:gravity="center"
        android:visibility="gone"
		>
    <!-- zoom in button -->
    <ImageButton
        android:id="@+id/zoom_in_landscape"
        android:src="@drawable/zoom_in_selector_v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true" 
        android:background="@null"
        android:visibility="gone"
         />
        <!-- android:onClick="onOptionClicked" -->
        
    <!-- zoom out button -->
    <ImageButton
        android:id="@+id/zoom_out_landscape"
        android:src="@drawable/zoom_out_selector_v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/zoom_in_landscape"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:layout_marginTop="-2.5dip"
        android:visibility="gone"
        />
        <!-- android:onClick="onOptionClicked" -->
	</RelativeLayout>
	
	


   
</RelativeLayout>
