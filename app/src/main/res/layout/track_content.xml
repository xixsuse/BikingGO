<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent">

	<ScrollView android:layout_width="wrap_content"
		android:layout_height="wrap_content">

		<LinearLayout android:orientation="vertical"
			android:layout_width="fill_parent" android:layout_height="fill_parent">

			<LinearLayout android:orientation="horizontal"
				android:layout_width="wrap_content" android:layout_height="wrap_content">

				<TextView android:id="@+id/track_content_name"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:textSize="20sp" android:text="軌跡名稱" />
			</LinearLayout>

			<LinearLayout android:orientation="horizontal"
				android:layout_width="wrap_content" android:layout_height="wrap_content">

				<TextView android:id="@+id/track_content_start"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:textSize="18sp" android:text="記錄起始時間" />
			</LinearLayout>

			<LinearLayout android:orientation="horizontal"
				android:layout_width="wrap_content" android:layout_height="wrap_content">

				<TextView android:id="@+id/track_content_end"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:textSize="18sp" android:text="記錄結束時間" />
			</LinearLayout>
			
			<LinearLayout android:orientation="horizontal"
				android:layout_width="wrap_content" android:layout_height="wrap_content">

				<TextView android:id="@+id/track_content_origin"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:textSize="18sp" android:text="軌跡起點" />
			</LinearLayout>
			
			<LinearLayout android:orientation="horizontal"
				android:layout_width="wrap_content" android:layout_height="wrap_content">

				<TextView android:id="@+id/track_content_destination"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:textSize="18sp" android:text="軌跡迄點" />
			</LinearLayout>
			
			<LinearLayout android:orientation="horizontal"
				android:layout_width="wrap_content" android:layout_height="wrap_content">

				<TextView android:id="@+id/track_content_distance"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:textSize="18sp" android:text="軌跡距離" />
			</LinearLayout>
			
			<LinearLayout android:orientation="horizontal"
				android:layout_width="wrap_content" android:layout_height="wrap_content">

				<TextView android:id="@+id/track_content_description"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:textSize="18sp" android:text="軌跡描述" />
			</LinearLayout>

		</LinearLayout>
	</ScrollView>
</RelativeLayout>
