        <!--
	<View android:id="@+id/param_divider4" android:layout_below="@id/param_layout_3"
		android:layout_width="fill_parent" android:layout_height="1dip"
		android:background="@drawable/divider_bg" />
        -->

        <LinearLayout
            android:id="@+id/linearLayout_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="#53d769" >

            <Button
                android:id="@+id/button1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:onClick="@string/title_view_back_pressed"
                android:text="@string/title_view_back"
                android:textColor="#61a2f7"
                android:typeface="sans"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:gravity="center"
                android:text="路徑清單"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:typeface="sans" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/top_right_btn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/ubike_list_btn"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>