<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="@dimen/padding_size_xl"
              android:gravity="center">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:isScrollContainer="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_track_window"
            android:paddingTop="@dimen/padding_size_s"
            android:paddingBottom="@dimen/padding_size_s"
            android:orientation="vertical">

            <TextView
                android:id="@+id/trackMenu_browse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/padding_size_l"
                android:paddingBottom="@dimen/padding_size_l"
                android:gravity="center"
                android:clickable="true"
                android:text="@string/track_browse_shared"
                android:textSize="@dimen/font_text_size_m"
                android:background="@drawable/background_transparent_button"/>

            <LinearLayout
                android:id="@+id/trackMenu_upload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:clickable="true"
                android:background="@drawable/background_transparent_button">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/md_grey_400"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/padding_size_l"
                    android:paddingBottom="@dimen/padding_size_l"
                    android:gravity="center"
                    android:text="@string/track_upload"
                    android:textSize="@dimen/font_text_size_m"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/trackMenu_delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:clickable="true"
                android:background="@drawable/background_transparent_button">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/md_grey_400"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/padding_size_l"
                    android:paddingBottom="@dimen/padding_size_l"
                    android:gravity="center"
                    android:text="@string/track_delete"
                    android:textSize="@dimen/font_text_size_m"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>