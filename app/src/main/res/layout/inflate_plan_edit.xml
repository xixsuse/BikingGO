<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="@dimen/padding_size_l"
              android:paddingStart="@dimen/padding_size_l"
              android:paddingRight="@dimen/padding_size_l"
              android:paddingEnd="@dimen/padding_size_l" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_planNumber"
            android:layout_width="@dimen/icon_common_size"
            android:layout_height="@dimen/icon_common_size"
            android:gravity="center"
            android:background="@drawable/background_plan_order_number"
            android:text="1"
            android:textSize="@dimen/font_text_size_m"
            android:textColor="@color/md_light_blue_800"
            android:textStyle="bold" />

        <View
            android:id="@+id/planNumberLine"
            android:layout_width="2dp"
            android:layout_height="@dimen/actionbar_item_height"
            android:background="@color/md_light_blue_800"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/padding_size_l"
        android:layout_marginStart="@dimen/padding_size_l"
        android:background="@drawable/background_search_text">

        <ImageView
            android:id="@+id/icon_dragSort"
            android:layout_width="@dimen/icon_common_size"
            android:layout_height="@dimen/icon_common_size"
            android:src="@drawable/ic_drag_sort"/>

        <TextView
            android:id="@+id/text_planSelectedName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/icon_common_size"
            android:layout_marginLeft="@dimen/padding_size_m"
            android:layout_marginStart="@dimen/padding_size_m"
            android:paddingLeft="@dimen/padding_size_m"
            android:paddingStart="@dimen/padding_size_m"
            android:paddingRight="@dimen/padding_size_m"
            android:paddingEnd="@dimen/padding_size_m"
            android:gravity="center_vertical"
            android:text="000000000000"
            android:textSize="@dimen/font_text_size_m"
            android:textColor="@color/md_grey_900"
            android:background="@drawable/selector_plan_text"/>

    </LinearLayout>

</LinearLayout>