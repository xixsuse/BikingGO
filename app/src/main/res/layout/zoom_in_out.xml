<?xml version="1.0" encoding="utf-8"?>

    <!-- Layout for MapActivity -->

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mapView_zoom_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
     >


   	<RelativeLayout
   		
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_marginBottom="90dip"
		android:gravity="center"
		>
    <!-- zoom in button -->
    <ImageButton
        android:id="@+id/zoom_out"
        android:src="@drawable/zoom_out_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true" 
        android:background="@null"
        />
        <!-- android:onClick="onOptionClicked" -->
        
    <!-- zoom out button -->
    <ImageButton
        android:id="@+id/zoom_in"
        android:src="@drawable/zoom_in_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/zoom_out"
        android:layout_centerVertical="true"
        android:background="@null"
        />
        <!-- android:onClick="onOptionClicked" -->
	</RelativeLayout>

   
</RelativeLayout>
