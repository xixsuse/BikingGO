<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/padding_size_l"
        android:paddingBottom="@dimen/padding_size_l"
        android:paddingLeft="@dimen/padding_size_xl"
        android:paddingStart="@dimen/padding_size_xl"
        android:paddingRight="@dimen/padding_size_xl"
        android:paddingEnd="@dimen/padding_size_xl">

        <ListView
            android:id="@+id/trackListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/md_grey_400"
            android:dividerHeight="0.5dp"/>

    </FrameLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingBtn_addTrack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_size_xl"
        android:layout_marginRight="@dimen/padding_size_xl"
        android:layout_marginEnd="@dimen/padding_size_xl"
        android:layout_gravity="bottom|end"
        android:src="@drawable/ic_button_add"
        android:scaleType="centerCrop"
        app:backgroundTint="@color/md_green_A700"
        app:rippleColor="@color/md_green_900"/>

</FrameLayout>