<?xml version="1.0" encoding="utf-8"?>

<!-- Layout for Selection ListView -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:background="@color/white" >

        <ListView
            android:id="@id/android:list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/secondBar"
            android:divider="@null" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="invisible" >

            <Button
                android:id="@+id/top_right_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:background="@drawable/top_list"
                android:onClick="@string/title_view_confirm_pressed"
                android:textAppearance="?android:attr/textAppearanceMediumInverse"
                android:textColor="#61a2f7"
                android:typeface="sans"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/TopBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#53d769" >

            <Button
                android:id="@+id/button1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:onClick="@string/title_view_back_pressed"
                android:text="@string/title_view_back"
                android:textColor="#61a2f7"
                android:typeface="sans"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/titlebar_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:gravity="center"
                android:text="@string/ubike_title"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:typeface="sans" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:visibility="invisible" >

                <Button
                    android:id="@+id/top_right_btn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/top_list"
                    android:onClick="@string/title_view_confirm_pressed"
                    android:textAppearance="?android:attr/textAppearanceMediumInverse"
                    android:textColor="#61a2f7"
                    android:typeface="sans"
                    android:visibility="visible" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/secondBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:background="#ececec"
            android:layout_below="@+id/TopBar" >

            <ImageView
                android:id="@+id/secondBarImageView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:src="@drawable/info" />

            <TextView
                android:id="@android:id/empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查無資料"
                android:textColor="#6fa71f"
                android:padding="5dp"
                android:textSize="21sp" />

            <TextView
                android:id="@+id/selection_listview_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="請選擇："
                android:padding="5dp"
                android:textColor="#6fa71f"
                android:textSize="20sp" />
        </LinearLayout>

    </RelativeLayout>

    <ImageView
        android:id="@+id/cell_imageview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:contentDescription="@string/img_bottom_background"
        android:scaleType="fitXY"
        android:src="@drawable/bottom_background" />

</RelativeLayout>