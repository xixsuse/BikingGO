<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingLeft="@dimen/padding_size_xl"
              android:paddingStart="@dimen/padding_size_xl"
              android:paddingRight="@dimen/padding_size_xl"
              android:paddingEnd="@dimen/padding_size_xl"
              android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <View
            android:id="@+id/planNumberLine_up"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/md_light_blue_800"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/text_planNumber"
            android:layout_width="@dimen/icon_common_size"
            android:layout_height="@dimen/icon_common_size"
            android:layout_weight="0"
            android:gravity="center"
            android:background="@drawable/background_plan_order_number"
            android:text="1"
            android:textSize="@dimen/font_text_size_m"
            android:textColor="@color/md_light_blue_800"
            android:textStyle="bold" />

        <View
            android:id="@+id/planNumberLine_down"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/md_light_blue_800"
            android:visibility="visible"/>

    </LinearLayout>

    <TextView
        android:id="@+id/text_planName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_size_xxl"
        android:layout_marginStart="@dimen/padding_size_xxl"
        android:layout_marginTop="@dimen/padding_size_xl"
        android:layout_marginBottom="@dimen/padding_size_xl"
        android:textSize="@dimen/font_text_size_l"
        android:textColor="@color/md_grey_800"/>


</LinearLayout>