<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/transparent_little_black"
              android:gravity="center">

    <ImageButton
        android:id="@+id/dialogCloseBtn"
        android:layout_width="@dimen/icon_common_size"
        android:layout_height="@dimen/icon_common_size"
        android:src="@android:drawable/ic_delete"
        android:background="@drawable/background_common_button"
        android:scaleType="centerCrop"
        android:layout_gravity="end"
        android:layout_marginRight="@dimen/padding_size_l"
        android:layout_marginEnd="@dimen/padding_size_l"
        android:layout_marginTop="@dimen/padding_size_l" />

    <ImageView
        android:id="@+id/dialogImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_size_l"
        android:clickable="true"
        android:layout_gravity="center"
        android:scaleType="centerCrop"/>

</LinearLayout>