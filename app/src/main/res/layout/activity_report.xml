<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="@dimen/padding_size_l">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:isScrollContainer="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/padding_size_m">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/padding_size_l"
                    android:layout_marginEnd="@dimen/padding_size_l"
                    android:text="@string/report_name"
                    android:textSize="@dimen/font_text_size_m"/>

                <EditText
                    android:id="@+id/edit_reporterName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/md_grey_900"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/padding_size_m">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/padding_size_l"
                    android:layout_marginEnd="@dimen/padding_size_l"
                    android:text="@string/report_type"
                    android:textSize="@dimen/font_text_size_m"/>

                <Spinner
                    android:id="@+id/spinner_reportType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/padding_size_m">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/padding_size_l"
                    android:layout_marginEnd="@dimen/padding_size_l"
                    android:text="@string/report_location"
                    android:textSize="@dimen/font_text_size_m"/>

                <Spinner
                    android:id="@+id/spinner_reportLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/padding_size_m">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/padding_size_l"
                    android:layout_marginEnd="@dimen/padding_size_l"
                    android:text="@string/report_title"
                    android:textSize="@dimen/font_text_size_m"/>

                <EditText
                    android:id="@+id/edit_reportTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/md_grey_900"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/padding_size_m">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/padding_size_l"
                    android:layout_marginEnd="@dimen/padding_size_l"
                    android:text="@string/report_start_time"
                    android:textSize="@dimen/font_text_size_m"/>

                <TextView
                    android:id="@+id/text_reportStartTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_size_m"
                    android:clickable="true"
                    android:background="@drawable/background_date_and_time_select"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/padding_size_m">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/padding_size_l"
                    android:layout_marginEnd="@dimen/padding_size_l"
                    android:text="@string/report_end_time"
                    android:textSize="@dimen/font_text_size_m"/>


                <TextView
                    android:id="@+id/text_reportEndTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_size_m"
                    android:clickable="true"
                    android:background="@drawable/background_date_and_time_select"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/padding_size_m">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/padding_size_l"
                    android:layout_marginEnd="@dimen/padding_size_l"
                    android:text="@string/report_description"
                    android:textSize="@dimen/font_text_size_m"/>

                <EditText
                    android:id="@+id/edit_reportDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/md_grey_900"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/padding_size_m">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/padding_size_l"
                    android:layout_marginEnd="@dimen/padding_size_l"
                    android:text="@string/report_email"
                    android:textSize="@dimen/font_text_size_m"/>

                <EditText
                    android:id="@+id/edit_reportEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/md_grey_900"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>