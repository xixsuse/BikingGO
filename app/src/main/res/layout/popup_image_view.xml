<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="@dimen/padding_size_l"
              android:background="@color/transparent_quarter_black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/background_poi_edit_window">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padding_size_l"
            android:paddingBottom="@dimen/padding_size_m"
            android:paddingRight="@dimen/padding_size_l"
            android:paddingEnd="@dimen/padding_size_l"
            android:paddingLeft="@dimen/padding_size_l"
            android:paddingStart="@dimen/padding_size_l">

            <TextView
                android:id="@+id/dialogPoiTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@+id/dialogCloseBtn"
                android:layout_toStartOf="@+id/dialogCloseBtn"
                android:textSize="@dimen/font_text_size_l"
                android:textColor="@color/md_grey_900"/>

            <ImageButton
                android:id="@+id/dialogCloseBtn"
                android:layout_width="@dimen/icon_common_size"
                android:layout_height="@dimen/icon_common_size"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/selector_close_button"
                android:padding="@dimen/padding_size_s"
                android:background="@drawable/background_marker_button"
                android:scaleType="centerCrop"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/md_grey_400"/>

        <ImageView
            android:id="@+id/dialogImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:layout_gravity="center"
            android:scaleType="fitCenter"/>

    </LinearLayout>



</LinearLayout>