<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/md_grey_50">

    <ScrollView
        android:id="@+id/poiInfoLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingBottom="@dimen/padding_size_s">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_poiPhoto"
                android:layout_width="match_parent"
                android:layout_height="@dimen/poi_photo_edit_view_xl"
                android:clickable="true"
                android:background="@drawable/background_poi_photo"
                android:src="@drawable/selector_add_photo"
                android:scaleType="center"/>

            <TextView
                android:id="@+id/text_poiTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/md_amber_700"
                android:paddingTop="@dimen/padding_size_m"
                android:paddingBottom="@dimen/padding_size_m"
                android:paddingLeft="@dimen/padding_size_xl"
                android:paddingStart="@dimen/padding_size_xl"
                android:paddingRight="@dimen/padding_size_xl"
                android:paddingEnd="@dimen/padding_size_xl"
                android:layout_marginBottom="@dimen/padding_size_s"
                android:text="敦南誠品"
                android:textSize="@dimen/font_text_size_xxl"
                android:textColor="@color/md_grey_50"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/padding_size_xxl"
                android:paddingStart="@dimen/padding_size_xxl"
                android:paddingRight="@dimen/padding_size_xl"
                android:paddingEnd="@dimen/padding_size_xl"
                android:layout_marginTop="@dimen/padding_size_xxl"
                android:layout_marginBottom="@dimen/padding_size_s">

                <ImageView
                    android:layout_width="@dimen/padding_size_xxl"
                    android:layout_height="@dimen/padding_size_xxl"
                    android:layout_marginTop="@dimen/padding_size_s"
                    android:src="@drawable/ic_location"/>

                <TextView
                    android:id="@+id/text_poiLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_size_l"
                    android:layout_marginStart="@dimen/padding_size_l"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/font_text_size_m"
                    android:textColor="@color/md_grey_800"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/padding_size_xxl"
                android:paddingStart="@dimen/padding_size_xxl"
                android:paddingRight="@dimen/padding_size_xl"
                android:paddingEnd="@dimen/padding_size_xl"
                android:layout_marginTop="@dimen/padding_size_xl">

                <ImageView
                    android:layout_width="@dimen/padding_size_xxl"
                    android:layout_height="@dimen/padding_size_xxl"
                    android:layout_marginTop="@dimen/padding_size_s"
                    android:src="@drawable/ic_comment"/>

                <TextView
                    android:id="@+id/text_poiContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_size_l"
                    android:layout_marginStart="@dimen/padding_size_l"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/font_text_size_m"
                    android:textColor="@color/md_grey_800"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5.5"
        android:gravity="center">

        <ImageButton
            android:id="@+id/btn_poiEdit"
            android:layout_width="@dimen/padding_size_super"
            android:layout_height="@dimen/padding_size_super"
            android:layout_marginRight="@dimen/padding_size_l"
            android:layout_marginEnd="@dimen/padding_size_l"
            android:padding="@dimen/padding_size_s"
            android:background="@drawable/background_marker_button"
            android:src="@drawable/ic_edit_off"
            android:scaleType="fitCenter"/>

        <ImageButton
            android:id="@+id/btn_poiDelete"
            android:layout_width="@dimen/padding_size_super"
            android:layout_height="@dimen/padding_size_super"
            android:layout_marginRight="@dimen/padding_size_l"
            android:layout_marginEnd="@dimen/padding_size_l"
            android:layout_marginLeft="@dimen/padding_size_l"
            android:layout_marginStart="@dimen/padding_size_l"
            android:src="@android:drawable/ic_menu_delete"
            android:background="@drawable/background_delete_button"
            android:scaleType="centerCrop"
            android:visibility="visible"/>

        <ImageButton
            android:id="@+id/btn_facebookShare"
            android:layout_width="@dimen/padding_size_super"
            android:layout_height="@dimen/padding_size_super"
            android:layout_marginLeft="@dimen/padding_size_l"
            android:layout_marginStart="@dimen/padding_size_l"
            android:background="@drawable/background_marker_button"
            android:src="@android:drawable/ic_menu_share"
            android:scaleType="fitCenter"
            android:visibility="visible"/>

    </LinearLayout>

</LinearLayout>