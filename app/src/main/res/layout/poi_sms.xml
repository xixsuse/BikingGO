<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" 
    android:background="#ffffff"
    >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="19dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_below="@+id/linearLayout1"
        android:scrollbars="none" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
            android:padding="10dp"
            >

            <RelativeLayout
                android:id="@+id/relativeLayout_input"
                android:layout_width="fill_parent"
                android:layout_height="50dip" >

                <TextView
                    android:id="@+id/poi_Receiver"
                    android:layout_width="65dip"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="5dip"
                    android:gravity="center_vertical"
                    android:text="@string/strRceiver"
                    android:textColor="#000000"
                    android:textSize="21sp" />

                <Button
                    android:id="@+id/sms_selectContact"
                    android:layout_width="50dip"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/layer_selection_ic_add" />

                <EditText
                    android:id="@+id/Phone_Text"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dip"
                    android:layout_toLeftOf="@id/sms_selectContact"
                    android:layout_toRightOf="@id/poi_Receiver"
                    android:hint="請輸入電話號碼"
                    android:textSize="18sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/relativeLayout_input"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="10dip"
                android:minHeight="90dip" >

                <TextView
                    android:id="@+id/poi_sms_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="18sp" 
                    android:textColor="#000000"
                    />

                <TextView
                    android:id="@+id/poi_sms_lon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/poi_sms_name"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/poi_sms_lat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/poi_sms_lon"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="18sp" />
            </RelativeLayout>

            <Button
                android:id="@+id/End_Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/relativeLayout_text"
                android:text="@string/strEnd_button"
                android:textSize="18sp" />

            <Button
                android:id="@+id/send_Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/relativeLayout_text"
                android:layout_marginRight="5dip"
                android:layout_toLeftOf="@id/End_Button"
                android:text="@string/strSend_button"
                android:textSize="18sp" />
        </RelativeLayout>
    </ScrollView>
<ImageView
        android:id="@+id/cell_imageview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:contentDescription="@string/img_bottom_background"
        android:scaleType="fitXY"
        android:src="@drawable/bottom_background" />

<LinearLayout
    android:id="@+id/linearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:background="#53d769" >

    <Button
        android:id="@+id/button1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:onClick="@string/title_view_back_pressed"
        android:text="@string/title_view_back"
        android:textColor="#61a2f7"
        android:typeface="sans"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="4"
        android:gravity="center"
        android:text="分享位置"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:typeface="sans" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="invisible" >

        <Button
            android:id="@+id/top_right_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:background="@drawable/top_list"
            android:onClick="@string/title_view_confirm_pressed"
            android:textAppearance="?android:attr/textAppearanceMediumInverse"
            android:textColor="#61a2f7"
            android:typeface="sans"
            android:visibility="visible" />
    </LinearLayout>
</LinearLayout>

</RelativeLayout>