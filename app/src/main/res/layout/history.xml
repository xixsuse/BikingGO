<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_2"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/TopBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#53d769" >

        <Button
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:onClick="@string/title_view_back_pressed"
            android:text="@string/title_view_back"
            android:textColor="#61a2f7"
            android:typeface="sans"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/titlebar_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:gravity="center"
            android:text="@string/byking_function_history_title"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:typeface="sans" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="invisible" >

            <Button
                android:id="@+id/top_right_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:background="@drawable/top_list"
                android:onClick="@string/title_view_confirm_pressed"
                android:textAppearance="?android:attr/textAppearanceMediumInverse"
                android:textColor="#61a2f7"
                android:typeface="sans"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/POI_layout"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_history" />

        <TextView
            android:id="@+id/POI_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重要地標POI"
            android:textColor="#000000"
            android:textSize="21dp" />

       
    </LinearLayout>

    <ImageView
        android:id="@+id/cell_imageview"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rent_btn_station"
        android:layout_centerHorizontal="true"
        android:background="#c8c7cc" />

    <LinearLayout
        android:id="@+id/Track_layout"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_history" />

        <TextView
            android:id="@+id/Track_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="軌跡"
            android:textColor="#000000"
            android:textSize="21dp" />

     
    </LinearLayout>

    <ImageView
        android:id="@+id/cell_imageview"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rent_btn_station"
        android:layout_centerHorizontal="true"
        android:background="#c8c7cc" />

</LinearLayout>