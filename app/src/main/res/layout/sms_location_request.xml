<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  android:id="@+id/widget1"
  android:background="@color/black"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android"
  >
<RelativeLayout
	android:layout_width="wrap_content"
  	android:layout_height="wrap_content"
  	android:layout_marginLeft="10dip"
  	android:layout_marginRight="10dip">
<RelativeLayout
android:id="@+id/relativeLayout_input"
	android:layout_width="fill_parent"
  	android:layout_height="50dip">
  <TextView
    android:id="@+id/Reciver"
    android:layout_width="65dip"
    android:layout_height="fill_parent"
    android:gravity="center_vertical"    
    android:text="@string/strRceiver"
    android:textSize="21sp"
    android:layout_marginRight="5dip"
    />
    <Button
    android:id="@+id/sms_selectContact"
    android:layout_width="50dip"
    android:layout_height="fill_parent"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    android:background="@drawable/layer_selection_ic_add"/>

  <EditText
    android:id="@+id/Phone_text"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_toRightOf="@id/Reciver"
    android:layout_toLeftOf="@id/sms_selectContact"
    android:layout_centerVertical="true"
    android:layout_marginRight="10dip"
    android:hint="請輸入電話號碼"
    android:textSize="18sp"/>

   
</RelativeLayout>
<RelativeLayout
	android:id="@+id/relativeLayout_text"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
  	android:minHeight="90dip"
  	android:layout_below="@id/relativeLayout_input"
  	android:layout_marginTop="10dip"
  	android:layout_marginBottom="10dip"
>  
  <TextView
    android:id="@+id/sms_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="您將發送一封簡訊查詢您友人的位置，按傳送簡訊須支付簡訊費用。"
    android:textSize="18sp"/>
</RelativeLayout>
<Button
    android:id="@+id/End_Button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/strEnd_button"
    android:layout_below="@id/relativeLayout_text"
    android:layout_alignParentRight="true"
    android:textSize="18sp"
	/>
  <Button
    android:id="@+id/Send_Button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/strSend_button"
    android:layout_toLeftOf="@id/End_Button"
    android:layout_below="@id/relativeLayout_text"
    android:layout_marginRight="5dip"
    android:textSize="18sp"
	/>

  
</RelativeLayout>
      <include
        layout="@layout/bottom_bg" />  
    
  
</RelativeLayout>
