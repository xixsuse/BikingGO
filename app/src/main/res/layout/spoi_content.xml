<?xml version="1.0" encoding="utf-8"?>
<ViewFlipper xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/viewFlipper1"
             android:layout_width="match_parent"
             android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#53d769" >

            <Button
                android:id="@+id/button10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:onClick="@string/title_view_back_pressed"
                android:text="@string/title_view_back"
                android:textColor="#61a2f7"
                android:typeface="sans"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/byking_function_spoi_title"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:typeface="sans" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right" >

                <Button
                    android:id="@+id/btn_book_loc"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/book_loc" />

                <Button
                    android:id="@+id/btn_book_call"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"
                    android:background="@drawable/book_call" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black" >

            <android.support.v4.view.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="200dip"
                android:background="@color/white" >
            </android.support.v4.view.ViewPager>

            <RadioGroup
                android:id="@+id/radioGroup1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/viewPager"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/dip5"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/radio01"
                    android:layout_width="10dip"
                    android:layout_height="10dip"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/dip5"
                    android:background="@drawable/check_page"
                    android:button="@null"
                    android:checked="true"
                    android:clickable="false"
                    android:text="@string/empty" />

                <RadioButton
                    android:id="@+id/radio02"
                    android:layout_width="10dip"
                    android:layout_height="10dip"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dip5"
                    android:layout_marginRight="@dimen/dip5"
                    android:background="@drawable/check_page"
                    android:button="@null"
                    android:clickable="false"
                    android:text="@string/empty" />

                <RadioButton
                    android:id="@+id/radio03"
                    android:layout_width="10dip"
                    android:layout_height="10dip"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dip5"
                    android:background="@drawable/check_page"
                    android:button="@null"
                    android:clickable="false"
                    android:text="@string/empty" />
            </RadioGroup>
        </RelativeLayout>

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none" >

            <LinearLayout
                android:id="@+id/LinearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dip"
                android:paddingRight="10dip" >

                <LinearLayout
                    android:id="@+id/spoi_content_layout_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/spoi_content_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dip5"
                        android:text="無名稱"
                        android:textColor="@color/black"
                        android:textSize="21dip" />

                    <TextView
                        android:id="@+id/spoi_content_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dip3"
                        android:text="無地址"
                        android:textColor="#6fa71f"
                        android:textSize="15dip" />

                    <TextView
                        android:id="@+id/spoi_content_tel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dip3"
                        android:text="無電話"
                        android:textColor="#61a2f7"
                        android:textSize="15dip" />
                </LinearLayout>

                <View
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/dip5"
                    android:background="#c8c7cc" />

                <TextView
                    android:id="@+id/spoi_content_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dip5"
                    android:text="無描述"
                    android:textColor="#4a5849"
                    android:textSize="15dip" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageButton
            android:id="@+id/ImageButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent"
            android:contentDescription="@string/empty"
            android:scaleType="fitXY" />
    </RelativeLayout>

</ViewFlipper>