<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:background="#ffffff"
  >
<RelativeLayout	
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:minHeight="65dip"
	android:layout_marginRight="10dip"
    android:id="@+id/navi_list_item">

    <RelativeLayout
    	android:id="@+id/relativelayout_test1"
    	android:layout_width="70dip"   
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_centerVertical="true"
	    >
	    <TextView
			android:id="@+id/text1"
			android:layout_width="wrap_content"   
		    android:layout_height="wrap_content"
		    android:textSize="18dip"
		    android:textColor="@color/yellow"
		    android:text="起點"	
		    android:layout_centerInParent="true"
		    android:visibility="gone"    
		    />
		 <ImageView
		    android:id="@+id/turn_image" 
		 	android:layout_width="48dip"   
		    android:layout_height="48dip"
		    android:src="@drawable/ic_transit_bus"
		    android:layout_centerInParent="true"
		    android:visibility="visible"
		    />
    </RelativeLayout>
    
    
    <RelativeLayout
    	android:id="@+id/relativelayout_test2"
    	android:layout_width="wrap_content"   
	    android:layout_height="wrap_content"
	    android:layout_toRightOf="@id/relativelayout_test1"
	    android:layout_centerVertical="true"
		>
    		<RelativeLayout
    		android:id="@+id/relayout_test1"
    			android:layout_width="fill_parent"
		    	android:layout_height="wrap_content"  
		    	android:gravity="center_vertical">
		    	<TextView
		    		android:id="@+id/roadlist_time"
					android:layout_width="wrap_content"   
				    android:layout_height="wrap_content"
				    android:layout_alignParentRight="true"
				    android:layout_centerVertical="true"
				    android:gravity="right"
				    android:textSize="15dip"
				    android:textColor="@color/gray"
				    android:text="8分鐘"
				    android:minWidth="50dip"
				    android:visibility="gone"
				    />
				<TextView
					android:id="@+id/roadlist_text1"
					android:layout_width="wrap_content"   
				    android:layout_height="wrap_content"
				    android:layout_alignParentLeft="true"
				    android:layout_toLeftOf="@id/roadlist_time"
				    android:layout_marginRight="5dip"
				    android:layout_centerVertical="true"
				    android:textSize="18dip"
				    android:textColor="@color/white"
				    android:text=""
				    />
				 
	    	</RelativeLayout>
		    <RelativeLayout
		    	android:layout_width="fill_parent"
		    	android:layout_height="wrap_content"
		    	android:layout_below="@id/relayout_test1"
		    	android:layout_alignParentLeft="true"
		    	android:gravity="center_vertical">
		    	<TextView
				    android:id="@+id/roadlist_distance"
					android:layout_width="wrap_content"   
				    android:layout_height="wrap_content"
				    android:layout_alignParentRight="true"
				    android:layout_centerVertical="true"
				    android:gravity="right"
				    android:textSize="15dip"
				    android:textColor="@color/gray"
				    android:text=""
				    android:minWidth="50dip"
				    android:visibility="visible"
				    />
				<TextView
					android:id="@+id/area"
					android:layout_width="wrap_content"   
				    android:layout_height="wrap_content"
				    android:layout_alignParentLeft="true"
				    android:layout_toLeftOf="@id/roadlist_distance"
				    android:layout_marginRight="5dip"
				    android:layout_centerVertical="true"
				    android:textSize="15dip"
				    android:textColor="@color/gray"
				    android:text=""
				    />				    
							    
			</RelativeLayout>
	</RelativeLayout>
</RelativeLayout>
	<View
    	android:layout_width="fill_parent"
    	android:layout_height="1dip"
    	android:layout_alignParentBottom="true"
    	android:background="@drawable/divider_bg"
    />


</RelativeLayout>

