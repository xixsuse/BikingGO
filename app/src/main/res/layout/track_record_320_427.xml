<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#53d769" >

        <Button
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:onClick="@string/title_view_back_pressed"
            android:text="@string/title_view_back"
            android:textColor="#61a2f7"
            android:typeface="sans"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/track_recording"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:typeface="sans" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical" >

            <Button
                android:id="@+id/track_record_start_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:text="開始錄製"
                android:textAppearance="?android:attr/textAppearanceMediumInverse"
                android:textColor="#61a2f7"
                android:textSize="19dp"
                android:visibility="visible" />

            <Button
                android:id="@+id/track_record_stop_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:text="結束錄製"
                android:textAppearance="?android:attr/textAppearanceMediumInverse"
                android:textColor="#61a2f7"
                android:textSize="19dip"
                android:typeface="sans"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

    <ScrollView
        android:id="@+id/ScrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout1"
        android:scrollbars="none" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <RelativeLayout
                android:id="@+id/track_record_info_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip" >

                <RelativeLayout
                    android:id="@+id/track_record_name_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/track_record_name"
                        android:layout_width="wrap_content"
                        android:layout_height="50dip"
                        android:gravity="center_vertical"
                        android:text="軌跡名稱"
                        android:textColor="#838181"
                        android:textSize="21dip" />

                    <EditText
                        android:id="@+id/track_record_name_edit_320_427"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/track_record_name"
                        android:singleLine="true"
                        android:text="軌跡1"
                        android:textColor="@color/gray"
                        android:textSize="18dip" />

                    <TextView
                        android:id="@+id/track_record_name_disp"
                        android:layout_width="wrap_content"
                        android:layout_height="50dip"
                        android:layout_below="@id/track_record_name"
                        android:gravity="center_vertical"
                        android:textColor="@color/gray"
                        android:textSize="18dip"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/track_record_name_disp_320_427"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/track_record_name"
                        android:gravity="center_vertical"
                        android:textColor="@color/gray"
                        android:textSize="18dip"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/track_record_description"
                        android:layout_width="wrap_content"
                        android:layout_height="25dip"
                        android:layout_below="@id/track_record_name_edit_320_427"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dip"
                        android:text="困難度"
                        android:textColor="#838181"
                        android:textSize="21dip" />

                    <TextView
                        android:id="@+id/track_record_description_2"
                        android:layout_width="wrap_content"
                        android:layout_height="25dip"
                        android:layout_below="@id/track_record_name_disp_320_427"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dip"
                        android:text="困難度"
                        android:textColor="@color/yellow"
                        android:textSize="21dip"
                        android:visibility="gone" />

                    <RatingBar
                        android:id="@+id/ratingbar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/track_record_description"
                        android:isIndicator="false"
                        android:minHeight="40dip"
                        android:numStars="5"
                        android:progressDrawable="@drawable/track_record_difficulty_ratingbar"
                        android:rating="0.0"
                        android:stepSize="1.0" />

                    <RatingBar
                        android:id="@+id/ratingbar2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/track_record_description_2"
                        android:isIndicator="false"
                        android:minHeight="40dip"
                        android:numStars="5"
                        android:progressDrawable="@drawable/track_record_difficulty_ratingbar"
                        android:rating="0.0"
                        android:stepSize="1.0" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/track_record_difficulty_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="0dip"
                    android:layout_below="@id/track_record_name_layout" >
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/track_record_desp_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/track_record_name_layout" >

                    <TextView
                        android:id="@+id/track_record_description"
                        android:layout_width="wrap_content"
                        android:layout_height="30dip"
                        android:gravity="center_vertical"
                        android:text="軌跡描述"
                        android:textColor="#838181"
                        android:textSize="21dip" />

                    <EditText
                        android:id="@+id/track_record_description_edit"
                        android:layout_width="fill_parent"
                        android:layout_height="110dip"
                        android:layout_below="@id/track_record_description"
                        android:gravity="top"
                        android:scrollbarStyle="outsideInset"
                        android:scrollbars="horizontal"
                        android:singleLine="false"
                        android:text="軌跡1-描述"
                        android:textColor="@color/gray"
                        android:textSize="18dip" />

                    <TextView
                        android:id="@+id/track_record_description_disp"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/track_record_description"
                        android:textColor="@color/gray"
                        android:textSize="18dip"
                        android:visibility="gone" />
                </RelativeLayout>
                <!-- </LinearLayout> -->
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/cell_imageview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:contentDescription="@string/img_bottom_background"
        android:scaleType="fitEnd"
        android:src="@drawable/bottom_background" />

</RelativeLayout>