<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent">

	<ScrollView android:layout_width="wrap_content"
		android:layout_height="wrap_content">

		<LinearLayout android:orientation="vertical"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:paddingLeft="10dip"
			android:paddingRight="10dip">

			<RelativeLayout android:orientation="horizontal"
				android:layout_width="wrap_content" android:layout_height="wrap_content">

				<TextView android:id="@+id/poi_content_name"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:textSize="21dip" android:text="重要地標名稱(分店名稱)" 
					android:textColor="@color/yellow"/>


				<TextView android:id="@+id/poi_content_address"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:layout_below="@id/poi_content_name"
					android:textSize="15dip" android:text="重要地標地址"
					android:textColor="@color/gray" />


				<TextView android:id="@+id/poi_content_phone"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:layout_below="@id/poi_content_address"
					android:textSize="15dip" android:text="重要地標電話" 
					android:textColor="@color/gray"/>
			</RelativeLayout>
			
			<LinearLayout android:id="@+id/poi_content_bhours_layout" android:orientation="horizontal"
				android:layout_width="wrap_content" android:layout_height="wrap_content">

				<TextView android:id="@+id/poi_content_bhours"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:textSize="18sp" android:text="營業時間" />
			</LinearLayout>
			
			<LinearLayout android:id="@+id/poi_content_bmodel_layout" android:orientation="horizontal"
				android:layout_width="wrap_content" android:layout_height="wrap_content">

				<TextView android:id="@+id/poi_content_bmodel"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:textSize="14sp" android:text="經營形式" />
			</LinearLayout>
			
			<LinearLayout android:id="@+id/poi_content_annot_layout" android:orientation="horizontal"
				android:layout_width="wrap_content" android:layout_height="wrap_content">

				<TextView android:id="@+id/poi_content_annot"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:textSize="14sp" android:text="重要地標附註" />
			</LinearLayout>

		</LinearLayout>
	</ScrollView>
</RelativeLayout>
