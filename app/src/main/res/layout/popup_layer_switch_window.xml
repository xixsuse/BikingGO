<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:paddingTop="@dimen/padding_size_l"
              android:paddingBottom="@dimen/padding_size_l"
              android:paddingLeft="@dimen/padding_size_xl"
              android:paddingStart="@dimen/padding_size_xl"
              android:paddingRight="@dimen/padding_size_xl"
              android:paddingEnd="@dimen/padding_size_xl"
              android:background="@color/transparent_little_black">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_layer_switch_window">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/padding_size_l"
                android:paddingStart="@dimen/padding_size_l"
                android:paddingRight="@dimen/padding_size_l"
                android:paddingEnd="@dimen/padding_size_l"
                android:paddingTop="@dimen/padding_size_m"
                android:paddingBottom="@dimen/padding_size_m">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/actionbar_switch_button"
                    android:textSize="@dimen/font_text_size_l"
                    android:textColor="@color/md_white_1000"
                    android:textStyle="bold"/>

                <ImageButton
                    android:id="@+id/switchWindowCloseBtn"
                    android:layout_width="@dimen/icon_common_size"
                    android:layout_height="@dimen/icon_common_size"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:padding="@dimen/padding_size_s"
                    android:src="@drawable/selector_close_button"
                    android:scaleType="fitCenter"
                    android:background="@null"/>

            </RelativeLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding_size_l"
                android:paddingStart="@dimen/padding_size_l"
                android:paddingRight="@dimen/padding_size_l"
                android:paddingEnd="@dimen/padding_size_l"
                android:paddingTop="@dimen/padding_size_s"
                android:paddingBottom="@dimen/padding_size_s">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/icon_common_size"
                    android:layout_weight="2.1"
                    android:src="@drawable/ic_marker_my_poi"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/padding_size_l"
                    android:layout_marginStart="@dimen/padding_size_l"
                    android:text="@string/marker_my_poi"
                    android:textSize="@dimen/font_text_size_m"
                    android:textColor="@color/md_grey_200"/>

                <Switch
                    android:id="@+id/switch_my_poi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding_size_m"
                android:paddingStart="@dimen/padding_size_m"
                android:paddingRight="@dimen/padding_size_m"
                android:paddingEnd="@dimen/padding_size_m"
                android:layout_marginTop="@dimen/padding_size_s"
                android:layout_marginBottom="@dimen/padding_size_l" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/md_grey_300" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding_size_l"
                android:paddingStart="@dimen/padding_size_l"
                android:paddingRight="@dimen/padding_size_l"
                android:paddingEnd="@dimen/padding_size_l"
                android:paddingTop="@dimen/padding_size_s"
                android:paddingBottom="@dimen/padding_size_s"
                android:background="@color/transparent_half_white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/layer_biking_lines"
                    android:textColor="@color/md_white_1000"
                    android:textSize="@dimen/font_text_size_m"/>

            </FrameLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding_size_l"
                android:paddingStart="@dimen/padding_size_l"
                android:paddingRight="@dimen/padding_size_l"
                android:paddingEnd="@dimen/padding_size_l"
                android:paddingTop="@dimen/padding_size_m"
                android:paddingBottom="@dimen/padding_size_m">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_size_m"
                    android:layout_weight="2.1"
                    android:layout_gravity="center_vertical"
                    android:background="@color/polyline_cycling"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/padding_size_l"
                    android:layout_marginStart="@dimen/padding_size_l"
                    android:text="@string/layer_cycling_1"
                    android:textSize="@dimen/font_text_size_m"
                    android:textColor="@color/md_grey_200"/>

                <Switch
                    android:id="@+id/switch_layer_cycling_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding_size_l"
                android:paddingStart="@dimen/padding_size_l"
                android:paddingRight="@dimen/padding_size_l"
                android:paddingEnd="@dimen/padding_size_l"
                android:paddingTop="@dimen/padding_size_m"
                android:paddingBottom="@dimen/padding_size_m">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_size_m"
                    android:layout_weight="2.1"
                    android:layout_gravity="center_vertical"
                    android:background="@color/polyline_top_ten"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/padding_size_l"
                    android:layout_marginStart="@dimen/padding_size_l"
                    android:text="@string/layer_top_ten"
                    android:textSize="@dimen/font_text_size_m"
                    android:textColor="@color/md_grey_200"/>

                <Switch
                    android:id="@+id/switch_layer_top_ten"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding_size_l"
                android:paddingStart="@dimen/padding_size_l"
                android:paddingRight="@dimen/padding_size_l"
                android:paddingEnd="@dimen/padding_size_l"
                android:paddingTop="@dimen/padding_size_m"
                android:paddingBottom="@dimen/padding_size_m">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_size_m"
                    android:layout_weight="2.1"
                    android:layout_gravity="center_vertical"
                    android:background="@color/polyline_recommended"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/padding_size_l"
                    android:layout_marginStart="@dimen/padding_size_l"
                    android:text="@string/layer_recommended"
                    android:textSize="@dimen/font_text_size_m"
                    android:textColor="@color/md_grey_200"/>

                <Switch
                    android:id="@+id/switch_layer_recommended"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding_size_m"
                android:paddingStart="@dimen/padding_size_m"
                android:paddingRight="@dimen/padding_size_m"
                android:paddingEnd="@dimen/padding_size_m"
                android:layout_marginTop="@dimen/padding_size_s"
                android:layout_marginBottom="@dimen/padding_size_s" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/md_grey_300" />

            </FrameLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding_size_l"
                android:paddingStart="@dimen/padding_size_l"
                android:paddingRight="@dimen/padding_size_l"
                android:paddingEnd="@dimen/padding_size_l"
                android:paddingTop="@dimen/padding_size_m"
                android:paddingBottom="@dimen/padding_size_m">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_size_m"
                    android:layout_weight="2.1"
                    android:layout_gravity="center_vertical"
                    android:background="@color/polyline_all_of_taiwan"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/padding_size_l"
                    android:layout_marginStart="@dimen/padding_size_l"
                    android:text="@string/layer_all_of_taiwan"
                    android:textSize="@dimen/font_text_size_m"
                    android:textColor="@color/md_grey_200"/>

                <Switch
                    android:id="@+id/switch_layer_all_of_taiwan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding_size_m"
                android:paddingStart="@dimen/padding_size_m"
                android:paddingRight="@dimen/padding_size_m"
                android:paddingEnd="@dimen/padding_size_m"
                android:layout_marginTop="@dimen/padding_size_s"
                android:layout_marginBottom="@dimen/padding_size_l" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/md_grey_300" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding_size_l"
                android:paddingStart="@dimen/padding_size_l"
                android:paddingRight="@dimen/padding_size_l"
                android:paddingEnd="@dimen/padding_size_l"
                android:paddingTop="@dimen/padding_size_s"
                android:paddingBottom="@dimen/padding_size_s"
                android:background="@color/transparent_half_white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/layer_rent_station"
                    android:textColor="@color/md_white_1000"
                    android:textSize="@dimen/font_text_size_m"/>

            </FrameLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding_size_l"
                android:paddingStart="@dimen/padding_size_l"
                android:paddingRight="@dimen/padding_size_l"
                android:paddingEnd="@dimen/padding_size_l"
                android:paddingTop="@dimen/padding_size_m"
                android:paddingBottom="@dimen/padding_size_s">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/icon_common_size"
                    android:layout_weight="2.1"
                    android:src="@drawable/ic_marker_bike_rent_station"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/padding_size_l"
                    android:layout_marginStart="@dimen/padding_size_l"
                    android:text="@string/layer_rent_station"
                    android:textSize="@dimen/font_text_size_m"
                    android:textColor="@color/md_grey_200"/>

                <Switch
                    android:id="@+id/switch_layer_rent_station"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding_size_l"
                android:paddingStart="@dimen/padding_size_l"
                android:paddingRight="@dimen/padding_size_l"
                android:paddingEnd="@dimen/padding_size_l"
                android:paddingTop="@dimen/padding_size_s"
                android:paddingBottom="@dimen/padding_size_s">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/icon_common_size"
                    android:layout_weight="2.1"
                    android:src="@drawable/ic_marker_you_bike_normal"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/padding_size_l"
                    android:layout_marginStart="@dimen/padding_size_l"
                    android:text="@string/layer_you_bike"
                    android:textSize="@dimen/font_text_size_m"
                    android:textColor="@color/md_grey_200"/>

                <Switch
                    android:id="@+id/switch_layer_you_bike"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>