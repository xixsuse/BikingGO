<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:background="#ffffff" >

        <ListView
            android:id="@android:id/list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@+id/actionsheet_btn"
            android:layout_below="@+id/list_search_box_layout"
            android:divider="@null"
            android:scrollbars="none" />

        <TextView
            android:id="@android:id/empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="查無資料"
            android:textSize="16sp"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/TopBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#53d769" >

            <Button
                android:id="@+id/history_top_left"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_weight="1.5"
                android:background="#00ffffff"
                android:onClick="@string/title_view_back_pressed"
                android:text="取消"
                android:textColor="#61a2f7"
                android:textSize="21sp"
                android:typeface="sans"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/titlebar_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:gravity="center"
                android:text="@string/byking_function_history_title"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:typeface="sans" />

            <Button
                android:id="@+id/history_top_right"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_weight="1.5"
                android:background="#00ffffff"
                android:onClick="@string/title_view_back_pressed"
                android:text="刪除"
                android:textColor="#61a2f7"
                android:textSize="21sp"
                android:typeface="sans"
                android:visibility="invisible" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/list_search_box_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/TopBar"
            android:orientation="vertical"
            android:padding="10dp" >

            <Button
                android:id="@+id/history_search_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/layer_selection_ic_search" />

            <EditText
                android:id="@+id/history_search_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/history_search_btn"
                android:ems="10"
                android:singleLine="true"
                android:textColor="@color/gray"
                android:textSize="18sp" >

                <requestFocus />
            </EditText>
        </RelativeLayout>
        <ImageButton
        android:id="@+id/actionsheet_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#61a2f7"
        android:contentDescription="@string/facebook_share"
        android:onClick="@string/facebook_share"
        android:padding="@dimen/dip5"
        android:src="@drawable/share_btn"
        android:text="@string/share" />
    </RelativeLayout>

    

    <com.example.actionsheet.ActionSheet
        android:id="@+id/actionSheet_his_fav_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center" >
    </com.example.actionsheet.ActionSheet>

</RelativeLayout>