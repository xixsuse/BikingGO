<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">

        <shape>

            <corners android:radius="10dip" />

            <gradient
                android:angle="270"
                android:centerColor="#ffcecece"
                android:centerY="0.45"
                android:endColor="#ffcecece"
                android:startColor="#ffcecece" />
        </shape>
    </item>

    <item android:id="@android:id/progress">

        <clip>

            <shape>

                <corners android:radius="10dip" />

                <gradient
                    android:angle="270"
                    android:centerColor="#61a2f7"
                    android:centerY="0.45"
                    android:endColor="#61a2f7"
                    android:startColor="#61a2f7" />
            </shape>
        </clip>
    </item>

</layer-list>