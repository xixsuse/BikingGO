<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/actionbar_background_color</item>
        <item name="colorPrimaryDark">@color/actionbar_background_color</item>
        <item name="android:textColorPrimary">@color/md_grey_50</item>
        <item name="actionBarStyle">@style/MyActionBarStyle</item>
        <item name="android:actionMenuTextColor">@color/md_grey_50</item>
        <item name="android:editTextStyle">@style/MyEditTextStyle</item>
        <!--
        <item name="android:windowBackground">@color/md_grey_50</item>
        <item name="android:textViewStyle">@style/MyTextViewStyle</item>
        -->
    </style>

    <style name="MyNavigationDrawerStyle">
        <item name="android:textSize">@dimen/font_text_size_m</item><!-- text size in menu-->
        <item name="android:listPreferredItemHeightSmall">@dimen/actionbar_item_height</item><!-- item size in menu-->
    </style>

    <style name="MyActionBarStyle" parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:height">@dimen/actionbar_height</item>
        <item name="android:background">@color/actionbar_background_color</item>
    </style>

    <style name="MyEditTextStyle" parent="Widget.AppCompat.EditText"/>

    <style name="MyTextViewStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/md_grey_50</item>
        <item name="android:textSize">@dimen/font_text_size_m</item>
    </style>

    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <!-- 不需要 ActionBar 了,因為改用Toolbar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/actionbar_background_color</item>
        <!-- 主要顏色
        <item name="colorPrimary">@color/black</item>
        -->
        <!-- 狀態欄背景色
        <item name="colorPrimaryDark">@color/home_bg_status_bar_color</item>
        <item name="colorAccent">@color/color_accent</item>
        -->
        <!-- 其他可用項目
        colorControlNormal, colorControlActivated, colorControlHighlight, colorSwitchThumbNormal
        -->
    </style>

    <style name="selectorDialog" parent="@android:style/Theme.Dialog">
        <!-- 邊框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 整個 layout 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 拿掉標題 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@drawable/dialogshape2</item>

        <!-- 由 XML 設定 Dialog 視窗是否變暗 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="selectorDialog2" parent="@android:style/Theme.Dialog">

        <!-- 邊框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 整個 layout 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 拿掉標題 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@drawable/dialogshape2</item>

        <!-- 由 XML 設定 Dialog 視窗是否變暗 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="CustomProgressBarHorizontal" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_pro</item>
        <item name="android:minHeight">10dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>

    <style name="styleName" parent="android:Widget.Button">
        <item name="android:background">#7bcccccc</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>