<?xml version="1.0" encoding="utf-8"?>

	<!-- General theme for all activities -->

<resources>
	<!-- globle styles -->
	<style name="main_theme">
		<!-- true: 隱藏status bar, false: 顯示status bar -->
		<item name="android:windowFullscreen">false</item>

		<!-- true: 隱藏title bar, false: 顯示title bar -->
		<item name="android:windowNoTitle">false</item>

	</style>

	<!-- styles for main map -->
	<style name="map_theme">

		<!-- Default color for text -->
		<item name="android:textColor">#000000</item>

		<!-- set height of title bar -->
		<item name="android:windowTitleSize">0dip</item>

		<!-- set background of title bar -->
		<item name="android:windowTitleBackgroundStyle">@android:style/Theme.Black.NoTitleBar</item>

		<!-- set style of ImageButton -->
		<item name="android:imageButtonStyle">@style/generalImageButtonStyle</item>

		<!-- set style of ListView -->
		<item name="android:listViewStyle">@style/generalListViewStyle</item>
	</style>

	<style name="generalTitleBackground">
		<item name="android:background">@drawable/top_bg</item>
	</style>


	<!-- style for menu -->
	<style name="menu_theme" parant="@android:style/Theme.NoTitleBar">

		<item name="android:backgroundDimEnabled">false</item>

		<!-- Default color for text -->
		<item name="android:textColor">#000000</item>

		<item name="android:windowBackground">@color/menu_background</item>

		<item name="android:windowContentOverlay">@null</item>

		<item name="android:windowIsFloating">true</item>

	</style>

	<color name="menu_background">
		#55000000
    </color>
    
	<style name="generalTitleBarStyle">
		<!-- set title bar -->
		<item name="android:windowTitleSize">30dip</item>
		<item name="android:windowTitleBackgroundStyle">@style/generalTitleBackground</item>
	</style>
	
	<!-- style for ListView -->
	<style name="generalListViewStyle">

		<item name="android:background">#00000000</item>

		<item name="android:choiceMode">singleChoice</item>

		<item name="android:layout_width">fill_parent</item>

		<item name="android:layout_height">wrap_content</item>
	</style>

	<!-- style for ImageButton -->
	<style name="generalImageButtonStyle">

		<item name="android:background">#01000000</item>
	</style>

	<!-- style for TextView in map navigation panels -->
	<style name="map_navi_options">

		<item name="android:textSize">24dip</item>

		<item name="android:textColor">#FFFFFF</item>
	</style>

	<!-- Style for Progress Dialog -->
	<style name="data_progress_dialog_style">
		<item name="android:windowFrame">@null</item>
		<item name="android:windowBackground">@android:color/white</item>
		<item name="android:windowIsFloating">true</item>
		<item name="android:windowContentOverlay">@null</item>
		<item name="android:windowTitleStyle">@null</item>
		<item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
		<item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
		<item name="android:background">@android:color/white</item>
	</style>
</resources>