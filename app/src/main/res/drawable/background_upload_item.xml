<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <stroke android:color="@color/md_green_A400"
                    android:width="2dp"/>

            <corners android:radius="4dp"/>

            <solid android:color="@color/transparent_little_black"/>

            <padding android:left="@dimen/padding_size_s"
                     android:top="@dimen/padding_size_l"
                     android:right="@dimen/padding_size_s"
                     android:bottom="@dimen/padding_size_l" />
        </shape>
    </item>

    <item>
        <shape>
            <stroke android:color="@color/md_green_A700"
                    android:width="2dp"/>

            <corners android:radius="4dp"/>

            <padding android:left="@dimen/padding_size_s"
                     android:top="@dimen/padding_size_l"
                     android:right="@dimen/padding_size_s"
                     android:bottom="@dimen/padding_size_l" />
        </shape>
    </item>

</selector>