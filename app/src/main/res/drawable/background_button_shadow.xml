<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <layer-list>
            <item android:left="3dp" android:top="4dp">
                <shape android:shape="oval">
                    <solid android:color="@color/transparent_little_black" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <!-- SHADOW LAYER -->
            <item android:left="3dp" android:top="4dp">
                <shape android:shape="oval">
                    <solid android:color="@color/transparent_half_black" />
                </shape>
            </item>
            <!-- CONTENT LAYER -->
            <item android:bottom="4dp" android:right="2dp">
                <shape android:shape="oval">
                    <solid android:color="@color/transparent_little_black" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>