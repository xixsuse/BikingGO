<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <stroke android:color="@color/md_green_A400"
                    android:width="4dp"/>

            <corners android:radius="6dp"/>

            <solid android:color="@color/transparent_half_black"/>
        </shape>
    </item>

    <item>
        <shape>
            <stroke android:color="@color/md_green_A700"
                    android:width="4dp"/>

            <corners android:radius="6dp"/>

            <solid android:color="@color/transparent_little_black"/>
        </shape>
    </item>

</selector>